{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "lib": [
      "es5",
      "es6",
      "DOM",
      "es2021"
    ],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "types": ["node", "jest", "express", "reflect-metadata"]
  }
}
